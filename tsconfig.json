{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "dom",
      "es2015",
      "dom.iterable"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": false,
    "target": "es2015",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.tsx"
  ]
}
